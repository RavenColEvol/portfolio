---
import { Icon } from 'astro-icon'

const { dir = 'left' } = Astro.props;

const social = [
  { icon: "mdi:github", href: "https://github.com/RavenColEvol" },
  { icon: "mdi:linkedin", href: "https://www.linkedin.com/in/ravi-lamkoti/" },
  { icon: "ant-design:codepen-circle-outlined", href: "https://codepen.io/ravencolevol" },
  { icon: "simple-icons:leetcode", href: "https://leetcode.com/nontoxic/" },
];
---

<div class="flex">
  {
    social.map((action) => (
      <a 
      class:list={["social-link", `margin-${dir}`]}
      target='_blank' href={action.href}>
        <Icon name={action.icon} />
      </a>
    ))
  }
</div>

<style lang="scss">
  .margin-left {
    margin-left: 2rem;
  }

  .margin-right {
    margin-right: 2rem;
  }

  .social-link {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
    color: var(--white-primary);
    padding: .4rem;
    transition: .15s all ease-in-out;

    &:hover {
      color: var(--white-secondary);
    }

    &::before,
    &::after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 50%;
    }

    &::before {
      z-index: -1;
      background: #020202;
    }

    &::after {
      transform: scale(1.1);
      z-index: -2;
      background: var(--gradient);
    }
  }
</style>
